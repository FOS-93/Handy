<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col md-6">

      <h1>User Profile</h1>

      <h1><%= @user.full_name %></h1>
      <p>Email: <%= @user.email %></p>

      <%# falta la zona horaria %>

      <p>Member since: <%= @user.created_at.strftime('%B %e, %Y') %></p>
      <%= link_to "Edit my profile", edit_user_registration_path %>
      <% unless @user.is_handyman? %>
        <%= link_to "Create your Handy profile", new_user_handyman_path(@user) %>
      <% end %>

      <% if @user.is_handyman? %>
        <h1>Handyman Profile</h1>

        <p>Location: <%= @user.handyman.location %></p>
        <p>About me: <%= @user.handyman.description %></p>

        <%= link_to 'Add Skill', new_handyman_skill_path(@user.handyman), class:"btn btn-info"%>

        <% @user.handyman.skills.each do |skill| %>
          <p><%= skill.name %> - <%= skill.level %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
