<div class="container">
  <div class="d-flex justify-content-center mt-2 img-my-profile" style="border-radius: 20px;">
    <div class="img-show" style="margin: 78px 0px 0px 0px;">
        <%= cl_image_tag(current_user.photo.key) %>
    </div>
  </div>
  <br>
  <br>
  <div style="display: grid;" class="mt-5">
    <div class="row">
      <div class="col-7">
        <div class="d-flex">
          <h4 style="margin: 4px 50px 0px 0px;">My Profile</h4>
          <h3><%= @user.full_name %></h3>
          <%= link_to edit_user_registration_path, class:"btn btn-secondary" do %>
            <i class="fas fa-user-edit"></i>
          <% end %>
        </div>
        <div>
          <i class="fas fa-solid fa-envelope"> </i> <%= @user.email %>
          <p>Member since: <%= @user.created_at.strftime('%B %e, %Y') %></p>
          <% unless @user.is_handyman? %>
            <%= link_to "Create your Handy profile", new_handyman_path(@user), class:"btn btn-secondary" %>
          <% end %>
        </div>
        <!-- linea -->
        <div class="linea"></div>
        <div class="d-flex">
          <h4 style="margin: 30px 50px 0px 0px;">My Handyman Profile</h4>
          <%= link_to 'Delete Handyman', @user.handyman, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info"%>
        </div>

        <% if @user.handyman.rating_count.zero? %>
          <p> No reviews yet</p>
        <% else %>
          <p>Reviews: (<%= @user.handyman.rating_count %>) <%= '<i class=" text-align-center fas fa-solid fa-star"></i>'.html_safe * @user.handyman.avr_rating %></p>
        <% end %>
        <p><i class="fas fa-location-arrow"></i> <%= @user.handyman.location %></p>
        <p><%= @user.handyman.description %></p>
        <%= link_to edit_handyman_path(@user.handyman), class:"btn btn-info" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <div class="linea"></div>

        <% @user.handyman.skills.each do |skill| %>
          <div class="d-flex">
          <h4 style="margin: 30px 50px 0px 0px;">My Skills</h4>
          <%= link_to 'Add Skill', new_handyman_skill_path(@user.handyman), class:"btn btn-info"%>
          </div>
          <p><%= skill.name %> - <%= skill.level %></p>
          <p><%= skill.description %></p>

          <%= link_to 'Edit Skill', edit_skill_path(skill), class:"btn btn-info"%>
          <%= link_to 'Delete Skill', skill, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
        <% end %>

      </div>


      <div class="col-5">
         <%# INFO RESERVAS USUARIO %>
            <div class="col-md">
              <h1>My Appointments</h1>
              <% @user.appointments.each do |a| %>
                <div class="profile-card">
                  <%= link_to handyman_path(a.handyman) do %>
                    <p>Handyman: <%= a.handyman.user.full_name %></p>
                  <% end %>
                  <p>Description: <%= a.description %></p>
                  <p>When: <%= a.date.strftime('%B %e, %Y') %></p>
                  <p>Status: <strong><%= a.status %></strong></p>
                  <% if a.status == "Accepted" %>
                    <% if !a.reviewed? %>
                      <%= link_to 'Leave a review', new_appointment_review_path(a), class:"btn btn-info"%>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>

          <%# INFO HANDYMAN REQUEST %>
          <% if @user.handyman %>
            <div class="col-md">
              <h1>My Requests</h1>
              <% @user.handyman.appointments.each do |a| %>
                <div class="profile-card">
                  <div>
                    <div class="m-1">
                      <i class="fas fal fa-address-card"></i><%= " " + a.user.full_name %>
                    </div>
                    <div class="m-1">
                      <i class="fas fa-info"></i><%= " " + a.description %>
                    </div>
                    <div class="m-1">
                      <i class="fas fal fa-calendar-alt"></i><%= " " + a.date.strftime('%B %e, %Y') %>
                    </div>
                  </div>
                  <p>Status: <strong><%= a.status %></strong></p>
                  <% if a.status == "Pending" %>
                    <%= link_to 'Accept', accept_appointment_path(a), method: :put, class: "btn btn-secondary"%>
                    <%= link_to 'Reject', reject_appointment_path(a), method: :put, class: "btn btn-secondary"%>
                  <% end %>
                </div>
              <% end  %>
            </div>
          <% end %>
      </div>
    </div>
  </div>


</div>
