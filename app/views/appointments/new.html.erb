<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= simple_form_for [@handyman, @appointment] do |f|  %>
        <%= f.input :date %>
        <%= f.input :description %>
        <%= f.input :skill, :collection => @handyman.skills %>
        <%= f.submit %>
      <% end %>

      <%= link_to 'Back', root_path, class:"btn btn-info"%>
    </div>
  </div>
</div>
