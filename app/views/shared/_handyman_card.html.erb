
<div class="card" style="width: 18rem;">
  <%= cl_image_tag(handyman.user.photo.key, :width=>200, :height=>300, :gravity=>"faces", :crop=>"thumb", class:"card-img-top") %>
    <% if handyman.reviews.empty? %>
      <div>
        <p>No reviews yet</p>
      </div>
    <% else %>
      <p><%= '<i class="fas fa-solid fa-star"></i>'.html_safe * handyman.avr_rating %> (<%= handyman.rating_count %>) </p>
    <% end %>
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h5 class="card-title"><%= handyman.user.full_name %></h5>
      <div>
          <% handyman.skills.each do |skill| %>
            <div class="skill">
              <p class= "<%=badges_for_skills(skill.name) %> mb-0"> <%= icons_for_skills(skill.name) %><%= skill.name %></p>
              <p class= "small fw-light"><%= skill.level %></p>
            </div>
          <% end %>
        </div>
    </div>
    <div>
      <div>
        <p><i class="fas fa-map-marker-alt me-3"></i><%= handyman.location %></p>
      </div>
    </div>
  </div>
  <div class="card-footer text-end">
    <%= link_to "Info", handyman_path(handyman.id), class:"btn btn-outline-dark" %>
    <%= link_to "Book", new_handyman_appointment_path(handyman.id), class:" btn btn-info" %>
  </div>
</div>
